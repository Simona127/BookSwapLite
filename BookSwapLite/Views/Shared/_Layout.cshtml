<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookSwapLite</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <!-- ✅ NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">

                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    📚 BookSwapLite
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="Index">
                                Books
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SwapRequest" asp-action="MyRequests">
                                Swap Requests
                            </a>
                        </li>
                    </ul>

                    <!-- ✅ LOGIN PARTIAL -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- ✅ FOOTER -->
    <footer class="text-center mt-5 py-4 border-top text-muted">
        <p class="mb-0">
            © 2026 BookSwapLite — Swap books with others 📖
        </p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
