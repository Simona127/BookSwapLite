@model BookSwap.Web.ViewModels.Books.BookDetailsViewModel

@{
    ViewData["Title"] = "Book Details";
}

<h2 class="mt-3">Book Details</h2>

<div class="card mt-4 p-3">
    <h4>@Model.Title</h4>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Condition:</strong> @Model.Condition</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
<a asp-action="Edit" asp-route-id="@ViewBag.BookId" class="btn btn-warning mt-3">Edit</a>
