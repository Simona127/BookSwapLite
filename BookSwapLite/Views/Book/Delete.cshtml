@model BookSwap.Web.ViewModels.Books.BookFormModel

@{
    ViewData["Title"] = "Delete Book";
}

<h2 class="text-danger mt-3">Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>

<div class="card mt-3 p-3">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger mt-3">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
