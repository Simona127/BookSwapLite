@model BookSwap.Web.ViewModels.Books.BookFormModel

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4 border-danger">
        <h3 class="text-danger fw-bold">⚠ Delete Book</h3>

        <p>Are you sure you want to delete this book?</p>

        <ul class="list-group mb-3">
            <li class="list-group-item">
                <strong>Title:</strong> @Model.Title
            </li>
            <li class="list-group-item">
                <strong>Author:</strong> @Model.Author
            </li>
        </ul>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">
                Yes, Delete
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                Cancel
            </a>
        </form>
    </div>
</div>
