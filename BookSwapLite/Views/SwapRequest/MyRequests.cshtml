@model IEnumerable<BookSwap.Web.ViewModels.SwapRequests.SwapRequestOwnerViewModel>

@{
    ViewData["Title"] = "Swap Requests for My Books";
}

<h2 class="fw-bold mb-4">📩 Swap Requests for My Books</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No swap requests yet.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>Requested By</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var req in Model)
            {
                <tr>
                    <td>@req.BookTitle</td>

                    <td>@req.ApplicantUsername</td>

                    <td>@req.CreatedOn.ToShortDateString()</td>

                    <td>
                        <span class="badge bg-warning text-dark">
                            @req.Status
                        </span>
                    </td>

                    <td class="d-flex gap-2">

                        <!-- ✅ Approve -->
                        <form asp-controller="SwapRequest"
                              asp-action="Approve"
                              method="post">
                            <input type="hidden" name="requestId" value="@req.Id" />
                            <button type="submit"
                                    class="btn btn-success btn-sm">
                                ✅ Approve
                            </button>
                        </form>

                        <!-- ✅ Reject -->
                        <form asp-controller="SwapRequest"
                              asp-action="Reject"
                              method="post">
                            <input type="hidden" name="id" value="@req.Id" />
                            <button type="submit"
                                    class="btn btn-danger btn-sm">
                                ❌ Reject
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
