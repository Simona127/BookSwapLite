@{
    ViewData["Title"] = "Welcome";
}

<div class="p-5 mb-4 bg-white rounded-3 shadow-sm text-center">
    <div class="container py-5">
        <h1 class="display-5 fw-bold">📚 Welcome to BookSwapLite</h1>

        <p class="fs-5 text-muted mt-3">
            Exchange books with other readers easily.
            Create swap requests, approve offers, and grow your library.
        </p>

        <a asp-controller="Book" asp-action="Index"
           class="btn btn-primary btn-lg mt-3">
            Browse Books
        </a>

        <a asp-controller="Book" asp-action="Create"
           class="btn btn-outline-secondary btn-lg mt-3 ms-2">
            Add a Book
        </a>
    </div>
</div>
